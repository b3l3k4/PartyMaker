<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorWordsMain"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="@string/FirstName"
        android:inputType="textPersonName"
        android:textColor="@color/colorWordsMain"
        android:textColorHint="@color/colorWordsMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <EditText
        android:id="@+id/userSurname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/LastName"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/colorWordsMain"
        android:textColorHint="@color/colorWordsMain"
        android:backgroundTint="@color/colorWordsMain"
        app:layout_constraintEnd_toEndOf="@+id/textTitle"
        app:layout_constraintStart_toStartOf="@+id/textTitle"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <EditText
        android:id="@+id/userMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/Email"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/colorWordsMain"
        android:textColorHint="@color/colorWordsMain"
        android:backgroundTint="@color/colorWordsMain"
        app:layout_constraintEnd_toEndOf="@+id/userSurname"
        app:layout_constraintStart_toStartOf="@+id/userSurname"
        app:layout_constraintTop_toBottomOf="@+id/userSurname" />

    <EditText
        android:id="@+id/userPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/Password"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/colorWordsMain"
        android:textColorHint="@color/colorWordsMain"
        android:backgroundTint="@color/colorWordsMain"
        app:layout_constraintEnd_toEndOf="@+id/userMail"
        app:layout_constraintStart_toStartOf="@+id/userMail"
        app:layout_constraintTop_toBottomOf="@+id/userMail" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/legit_button"
        android:text="@string/CreateAccount"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/userPass"
        app:layout_constraintStart_toStartOf="@+id/userPass"
        app:layout_constraintTop_toBottomOf="@+id/userPass" />

    <ImageButton
        android:id="@+id/backwardArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/half_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/CreateNewAccount"
        android:textColor="@color/colorWordsMain"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>





