<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="academy.b3l3k4.partyMaker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/legit_logo"
        android:appCategory="social"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MyFirebaseInstanceIdService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LogIn"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UserProfile"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".UserSettings"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StartNewEvent"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventCreated"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FindVenue"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".WebView"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddNewMember"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NotificationActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventActivityMember"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NotificationActivityEmpty"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EventSettings"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>